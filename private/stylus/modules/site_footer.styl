.siteFooter {
   fullBackgroundImage('../img/beach.jpg')
   background-position top
   flex-direction row
   padding $space-5
   @media (max-width 640px) {
      background-size 200%
   }
   @media (max-width: 500px) {
      flex-direction column
      padding $space-5 0
   }
   @media (max-width: 350px) {
      background-size 200% 200%
   }





   .siteLogo {
      @media (min-width 501px) {
         margin-right $space-2
      }
   }
   .siteLogo svg {
      width 50px
      height 50px
      color rgba($color-yellow2, .7)
      transition color .5s ease
   }
   .siteLogo:hover svg {
      @media $lg {
         color $color-yellow2
      }
   }





   .copyright {
      color $color-black1
      font-size $font-1
      @media (max-width: 500px) {
         text-align center
      }
   }

}
