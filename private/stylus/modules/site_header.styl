.siteHeader {
   fullBackgroundImage('../img/beach.jpg')
   background-position top
   padding-bottom 150px
   @media (max-width 370px) {
      paddinf-bottom 100px
   }





   .siteLogo {
      display flex
      width 50px
      height 50px
      @media $md-lg {
         margin $space-2 auto 0 $space-2
      }
      @media $sm {
         margin-top $space-2
      }
   }
   .siteLogo svg {
      color rgba($color-black1, .5)
      transition color .5s ease
   }
   .siteLogo:hover svg {
      @media $lg {
         color $color-black1
      }
   }





   .titlesContainer {
      width auto
      margin 150px auto auto auto
      @media (max-width 370px) {
         margin-top 100px
      }
   }
   h1, h2 {
      color $color-white1
   }
   h1 {
      padding $space-3
      border 10px solid $color-white1
      font-size $font-5
      @media (max-width 630px) {
         font-size 10vw
      }
      @media (max-width 370px) {
         padding $space-2
         border 7px solid $color-white1
      }
   }
   h2 {
      margin-top $space-3
      font-size $font-2
      text-align center
      @media (max-width 370px) {
         margin-top $space-2
      }
      @media (max-width 350px) {
         font-size $font-1
      }
   }

}
